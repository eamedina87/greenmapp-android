<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="48sp"
    android:orientation="horizontal"
    >

    <TextView
        android:id="@+id/estadistica_ciudad"
        android:layout_width="40sp"
        android:layout_height="match_parent"
        android:text="Ciudad"
        android:layout_marginLeft="5sp"
        android:layout_weight="2"
        android:gravity="center_vertical|left"/>

    <TextView
        android:id="@+id/estadistica_arboles"
        android:layout_width="20sp"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/estadistica_patrimoniales"
        android:text="-1"
        android:layout_marginRight="5sp"
        android:layout_weight="1"
        android:gravity="center"/>

    <TextView
        android:id="@+id/estadistica_patrimoniales"
        android:layout_width="20sp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:text="-1"
        android:layout_marginRight="5sp"
        android:gravity="center"/>

</LinearLayout>