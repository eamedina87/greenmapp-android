<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="10sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.ProgressBar"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/arbol_imagen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:layout_weight="4"
            android:src="@mipmap/ic_tree"/>

        <TextView
            android:id="@+id/arbol_tipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo"
            android:layout_gravity="center"
            android:layout_marginBottom="5sp"
            />

        <TextView
            android:id="@+id/arbol_descripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descripcion"
            android:layout_gravity="center"
            android:layout_marginBottom="5sp"
            />

        <TextView
            android:id="@+id/arbol_patrimonial"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Patrimonial"
            android:layout_gravity="center"
            android:layout_marginBottom="5sp"
            />

        <TextView
            android:id="@+id/arbol_direccion"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Direccion - Sector"
            android:layout_gravity="center"
            android:layout_marginBottom="5sp"
            />

        <TextView
            android:id="@+id/arbol_ciudad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ciudad - Provincia"
            android:layout_gravity="center"
            android:layout_marginBottom="5sp"
            />

        <TextView
            android:id="@+id/arbol_padrinos_tv"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Padrinos"
            android:layout_gravity="center"
            android:gravity="left"
            android:background="@color/colorPrimary"
            android:layout_marginBottom="5sp"
            android:padding="5sp"
            android:textColor="@color/cardview_dark_background"
            />

        <ScrollView
            android:id="@+id/arbol_padrinos_sv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            >
            <ListView
                android:id="@+id/arbol_padrinos"
                android:layout_width="match_parent"
                android:layout_height="100sp">

            </ListView>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48sp"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Apadrinar"
                android:gravity="center"
                android:background="@color/com_facebook_button_background_color_disabled"
                android:padding="2sp"
                android:layout_margin="2sp"
                android:id="@+id/btn_apadrinar"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/com_facebook_button_background_color_disabled"
                android:layout_weight="1"
                android:text="Denunciar"
                android:gravity="center"
                android:padding="2sp"
                android:layout_margin="2sp"
                android:id="@+id/btn_denunciar"
                />

        </LinearLayout>
    </LinearLayout>



</android.support.design.widget.CoordinatorLayout>